-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th 
        %a{:id => "title_header", :class => @highlight_title, :href => movies_path(:sort => :title)} Movie Title
      %th Rating
      %th 
        %a{:id => "release_date_header", :class => @highlight_release_date, :href => movies_path(:sort => :release_date)} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
